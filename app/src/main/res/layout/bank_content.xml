<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bankImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:background="@color/md_teal_700"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/a1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/bankImage"
            app:layout_constraintBottom_toTopOf="@+id/a2"
            android:layout_marginStart="@dimen/margin_6x"
            android:layout_marginLeft="@dimen/margin_6x"
            android:text="DEDE"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/a2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/a1"
            app:layout_constraintStart_toEndOf="@+id/bankImage"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="@dimen/margin_6x"
            android:layout_marginLeft="@dimen/margin_6x"
            android:text="DEDE"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/a3"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/a4"
            app:layout_constraintStart_toEndOf="@+id/a1"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="DEDE"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/a4"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/a3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/a2"
            android:text="DEDE"/>

</androidx.constraintlayout.widget.ConstraintLayout>